<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>Writeboard</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery', 'jquery-ui.min','rails', 'ckeditor/ckeditor','application' %>
  <%= csrf_meta_tag %>
</head>
<body>

<span id="top"></span>

<div id="templatemo_wrapper">
    <!-- <div id = "right_sidebar"><img src = "images/calendar_bg.gif"></div> -->
    <div id="templatmeo_header">
        <div id="site_title">
            <h1><a href="#">WhiteBoard</a></h1>
        </div>

        <div id='search_box'>
          <span id = "search_text">Quick Find</span>
          <%= form_tag search_documents_path, :method => 'post' do %>
          <%= select_tag(:options, options_for_select([['All','all'],['My Documents','my_docs']]))%>
            <%= text_field_tag :search %>
            <%= submit_tag "Search" %>
          <% end %>
        </div>

        <div id="templatemo_menu">
            <ul>
                <li><% if user_signed_in? %>
                      <%= link_to "Sign Out", destroy_user_session_path%>
                    <% else %>
                      <%= link_to "Sign In", new_user_session_path%>
                    <% end %>
                </li>
            </ul>
        </div> <!-- end of templatemo_menu -->



    </div> <!-- end of header -->
    <div id="templatemo_main">
        <div id="home" class="content_top"></div>
        <div class="content_box">

               <div id="notice"> <%= notice %></div>
                <div id="alert"> <%= alert %></div>
                <%= yield %>


          <div id = "accordion">
              <%= render 'documents/user_preferences' %>
          </div>
                <div class="col_w310 float_l">

                </div>




            <div class="cleaner"></div>
            <a href="#" class="gototop">Go To Top</a>
        </div>
</div>


    <div id="templatemo_footer">

        Copyright Â© 2048 <a href="#">Sprout Technologies</a> | <a href="http://www.iwebsitetemplate.com" target="_parent">Website Templates</a> by <a href="http://www.templatemo.com" target="_parent">Free CSS Templates</a>

        <div class="cleaner"></div>
    </div>

</div> <!-- end of warpper -->

</body>
</html>
